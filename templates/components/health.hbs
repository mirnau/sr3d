<div class="ecg-container">
    <!-- Bottom canvas for green line -->
    <canvas id="ecg-canvas" class="ecg-animation"></canvas>

    <!-- Top canvas for cyan point -->
    <canvas id="ecg-point-canvas"></canvas>

    <div class="left-gradient"></div>
    <div class="right-gradient"></div>
</div>

<div class="condition-monitor">
    <div class="condition-meter">

        <div class="stun-damage">

            <h3 class="no-margin checkbox-label">Stun</h3>

            <div class="damage-input">
                <input type="checkbox" id="healthBox1" name="system.health.stun.0" {{#if system.health.stun.[0]}}checked{{/if}}/>
                <div class="damage-description stun">
                    <h4 class="no-margin unlit">Light</h4>
                </div>
            </div>

            <div class="damage-input">
                <input type="checkbox" id="healthBox2" name="system.health.stun.1" {{#if system.health.stun.[1]}}checked{{/if}}/>
            </div>

            <div class="damage-input">
                <input type="checkbox" id="healthBox3" name="system.health.stun.2" {{#if system.health.stun.[2]}}checked{{/if}}/>
                <div class="damage-description stun">
                    <h4 class="no-margin unlit">Moderate</h4>
                </div>
            </div>
            <div class="damage-input">
                <input type="checkbox" id="healthBox4" name="system.health.stun.3" {{#if system.health.stun.[3]}}checked{{/if}}/>
            </div>
            <div class="damage-input">
                <input type="checkbox" id="healthBox5" name="system.health.stun.4" {{#if system.health.stun.[4]}}checked{{/if}}/>
            </div>
            <div class="damage-input">
                <input type="checkbox" id="healthBox6" name="system.health.stun.5" {{#if system.health.stun.[5]}}checked{{/if}}/>
                <div class="damage-description stun">
                    <h4 class="no-margin unlit">Serious</h4>
                </div>
            </div>
            <div class="damage-input">
                <input type="checkbox" id="healthBox7" name="system.health.stun.6" {{#if system.health.stun.[6]}}checked{{/if}}/>
            </div>
            <div class="damage-input">
                <input type="checkbox" id="healthBox8" name="system.health.stun.7" {{#if system.health.stun.[7]}}checked{{/if}}/>
            </div>
            <div class="damage-input">
                <input type="checkbox" id="healthBox9" name="system.health.stun.8" {{#if system.health.stun.[8]}}checked{{/if}}/>
            </div>
            <div class="damage-input">
                <input type="checkbox" id="healthBox10" name="system.health.stun.9" {{#if system.health.stun.[9]}}checked{{/if}}/>
                <div class="damage-description stun">
                    <h4 class="no-margin unlit">Deadly</h4>
                </div>
            </div>
        </div>
        <div class="physical-damage">

            <h3 class="no-margin checkbox-label">Physical</h3>
            <div class="damage-input">
                <input type="checkbox" id="healthBox11" name="system.health.physical.0" {{#if system.health.physical.[0]}}checked{{/if}}/>
                <div class="damage-description physical">
                    <h4 class="no-margin unlit">Light</h4>
                </div>
            </div>

            <div class="damage-input">
                <input type="checkbox" id="healthBox12" name="system.health.physical.1" {{#if system.health.physical.[1]}}checked{{/if}}/>
            </div>
            <div class="damage-input">
                <input type="checkbox" id="healthBox13" name="system.health.physical.2" {{#if system.health.physical.[2]}}checked{{/if}}/>
                <div class="damage-description physical">
                    <h4 class="no-margin unlit">Moderate</h4>
                </div>
            </div>
            <div class="damage-input">
                <input type="checkbox" id="healthBox14" name="system.health.physical.3" {{#if system.health.physical.[3]}}checked{{/if}}/>
            </div>
            <div class="damage-input">
                <input type="checkbox" id="healthBox15" name="system.health.physical.4" {{#if system.health.physical.[4]}}checked{{/if}}/>
            </div>
            <div class="damage-input">
                <input type="checkbox" id="healthBox16" name="system.health.physical.5" {{#if system.health.physical.[5]}}checked{{/if}}/>
                <div class="damage-description physical">
                    <h4 class="no-margin unlit">Serious</h4>
                </div>
            </div>
            <div class="damage-input">
                <input type="checkbox" id="healthBox17" name="system.health.physical.6" {{#if system.health.physical.[6]}}checked{{/if}}/>
            </div>
            <div class="damage-input">
                <input type="checkbox" id="healthBox18" name="system.health.physical.7" {{#if system.health.physical.[7]}}checked{{/if}}/>
            </div>
            <div class="damage-input">
                <input type="checkbox" id="healthBox19" name="system.health.physical.8"{{#if system.health.physical.[8]}}checked{{/if}}/>
            </div>
            <div class="damage-input">
                <input type="checkbox" id="healthBox20" name="system.health.physical.9" {{#if system.health.physical.[9]}}checked{{/if}}/>
                <div class="damage-description physical">
                    <h4 class="no-margin unlit">Deadly</h4>
                </div>
            </div>
        </div>
    </div>
    <div class="stat-card">
        <div class="stat-label">
            Overflow{{system.overflow}}
        </div>
    </div>

    <div class="stat-card">
        <div class="stat-label">
            Penalty{{system.overflow}}
            Penalty{{system.overflow}}
        </div>
    </div>

</div>
