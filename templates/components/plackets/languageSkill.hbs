<!-- The language skill card in the skills section of the character sheet -->
{{#each skills.language}}
<div class="language-skill-category">

   {{#if (isShoppingStateActive ../actor)}}
          <div class="edit-icon">
            <h4>
              <a class="edit-skill" data-id="{{id}}">
                <i class="fas fa-pen-to-square pulsing-green-cart"></i>
              </a>
            </h4>
          </div>
          {{else}}
          <div class="checkmark">
            <a class="select-skill">
              <i class="fa-solid fa-circle-check"></i>
            </a>
          </div>
          {{/if}}

      <!-- Main Skill Name -->
    <div class="language-skill-name">
      <h3>{{name}}</h3>
    </div>
    
    <div class="language-card-container">
      <!-- Subskills -->
      {{#each skills}}
      <div class="specialisation-container">
        <div class="core-skill">
          <div class="language-card">
            <div class="skill-name">
              <h3>{{type}}</h3>
            </div>
            <div class="skill-value h1-value">
              <h1 class="no-margin">
                {{#if base}}
                {{base}}
                {{else}}
                0
                {{/if}}
              </h1>
            </div>
          </div>
        </div>
        {{#if specializations}}
        <div class="specializations">
          {{#each specializations}}
          <div class="skill-specialization-card language-specialization-card-color-override">
            <div class="specialization-name">
              {{name}}
            </div>
            <div class="specialization-value specialization-font">
              <h1 class="no-margin">
                {{#if value}}
                {{value}}
                {{else}}
                0
                {{/if}}
              </h1>
            </div>
          </div>
          {{/each}}
        </div>
        {{/if}}
      </div>
      {{/each}}
    </div>
  </div>
  {{/each}}