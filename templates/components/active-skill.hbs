<div class="item-header">
    <div class="item-image">
        <img class="small" src="{{item.img}}" data-edit="img" title="{{item.name}}" />
    </div>

    <div class="item-middle-header">
        <div class="skill-header">
            <h1 class="h1">{{localize "sr3d.item.skill.activeSkill"}}</h1>
        </div>

        <div class="active-skill-icons">

            {{#if isOwned}}
            <a class="delete-owned-instance" title="{{localize 'sr3d.sheet.deleteSkill'}}">
                <i class="fas fa-trash-alt"></i>
            </a>
            <a class="buy-skill" title="{{localize " sr3d.sheet.purchaseSkills"}}">
                <i class="fas fa-shopping-cart"></i>
            </a>
            <a class="undo" title="Undo">
                <i class="fas fa-undo-alt"></i>
            </a>
            {{/if}}
        </div>
    </div>

    <div class="skill-value">
        {{system.activeSkill.value}}
    </div>
</div>
<div class="item-name">
    <input name="name" type="text" value="{{item.name}}" placeholder="{{localize 'Name'}}" />
</div>

<div class="skill-type" data-skill-type="activeSkill">


    <div class="linked-attribute" data-item-id="{{this._id}}">
        <div class="attribute-header">
            <h3 class="no-margin">{{localize "sr3d.item.skill.linkedAttribute"}}</h3>
        </div>
        <div class="attribute-select">
            <select name="system.skill.activeSkill.linkedAttribute">
                {{#each attributes}}
                <option value="{{this}}" {{#if (eq this ../system.skill.activeSkill.linkedAttribute)}}selected{{/if}}>
                    {{this}}
                </option>
                {{/each}}
            </select>
        </div>
    </div>

    <!-- Specializations Section -->
     {{#if isOwned}}
    <div class="specializations-section">

        <div class="specializations-header">
            <h3>{{localize "sr3d.item.skill.specializations"}}</h3>
        </div>

        <div class="specialization-add">
            <input type="text" placeholder="{{localize  'sr3d.item.skill.placeholder'}}" class="specialization-name" />
            <a class="add-specialization" title="{{localize 'sr3d.item.sheet.addSpecialization'}}">
                <i class="fas fa-square-plus"></i>
            </a>
        </div>

        <div class="specializations-list">

            {{#each system.skill.activeSkill.specializations}}

            <div class="specialization-container" data-index="{{@index}}">
                <div class="specialization-card">

                    <input type="text" name="system.skill.activeSkill.specializations.[{{@index}}].name"
                        value="{{this.name}}" />

                    <div class="specialization-value" type="number" id="value-{{@index}}">
                        <h1 class="no-margin">
                            {{#if this.value}}
                            {{this.value}}
                            {{else}}
                            0
                            {{/if}}
                        </h1>
                    </div>

                </div>
                <div class="specialization-acitons">
                    <a class="delete-specialization" title="Delete Specialization">
                        <i class="fas fa-trash-alt"></i>
                    </a>
                    <a class="buy-skill" title="{{localize " sr3d.sheet.purchaseSkills"}}">
                        <i class="fas fa-shopping-cart"></i>
                    </a>
                    <a class="undo" title="Undo">
                        <i class="fas fa-undo-alt"></i>
                    </a>
                </div>
            </div>

            {{else}}
            <div>Create a speciality by pressing the "+" icon.</div>
            {{/each}}

        </div>
    </div>
    {{/if}}
</div>
