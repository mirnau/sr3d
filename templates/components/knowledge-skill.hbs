<section class="knowledge-skill-section">
    <div class="item-header">
        <div class="item-image">
            <img class="small" src="{{item.img}}" data-edit="img" title="{{item.name}}" />
        </div>

        <div class="item-middle-header">
            <div class="skill-header">
                <h1 class="h1">{{localize "sr3d.item.skill.knowledgeSkill"}}</h1>
            </div>

            <div class="skill-icons">

                {{#if isOwned}}
                <a class="delete-owned-instance" title="{{localize 'sr3d.sheet.deleteSkill'}}">
                    <i class="fas fa-trash-alt"></i>
                </a>
                <a class="buy-skill" title="{{localize " sr3d.sheet.purchaseSkills"}}">
                    <i class="fas fa-shopping-cart"></i>
                </a>
                <a class="undo-skill" title="Undo">
                    <i class="fas fa-undo-alt"></i>
                </a>
                {{/if}}
            </div>
        </div>

        <div class="skill-value">
            {{system.knowledgeSkill.value}}
        </div>
    </div>

    <div class="item-name">
        <input name="name" type="text" value="{{item.name}}" placeholder="{{localize 'Name'}}" />
    </div>

    <div class="skill-type" data-skill-type="knowledgeSkill">

        <!-- Specializations Section -->
        {{#if isOwned}}
        <div class="specializations-section">

            <div class="specializations-header">
                <h3>{{localize "sr3d.item.skill.specializations"}}</h3>
            </div>

            <div class="specialization-add">
                <input type="text" placeholder="{{localize  'sr3d.item.skill.placeholder'}}"
                    class="specialization-name" />
                <a class="add-specialization" title="{{localize 'sr3d.item.sheet.addSpecialization'}}">
                    <i class="fas fa-square-plus"></i>
                </a>
            </div>

            <div class="specializations-list">

                {{#each system.knowledgeSkill.specializations}}

                    <div class="specialization-container" data-index="{{@index}}">
                        <div class="specialization-card">
                            <!-- Name Input -->
                            <input type="text" name="system.knowledgeSkill.specializations.[{{@index}}].name"
                                value="{{this.name}}" />

                            <!-- Display the value in a div -->
                            <div class="specialization-value" contenteditable="false"
                                oninput="this.nextElementSibling.value = this.innerText">
                                <h1 class="no-margin">{{this.value}}</h1>
                            </div>

                            <!-- Hidden input to store the value -->
                            <input type="hidden" name="system.knowledgeSkill.specializations.[{{@index}}].value"
                                value="{{this.value}}"/>
                        </div>

                        <div class="specialization-actions" data-index="{{@index}}">
                            <a class="delete-specialization" title="Delete Specialization">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                            <a class="buy-specialization" title="{{localize 'sr3d.sheet.purchaseSpecialization'}}">
                                <i class="fas fa-shopping-cart"></i>
                            </a>
                            <a class="undo-specialization" title="{{localize 'sr3d.sheet.undoSpecialization'}}">
                                <i class="fas fa-undo-alt"></i>
                            </a>
                        </div>
                    </div>


                {{else}}
                <div>Create a speciality by pressing the "+" icon.</div>
                {{/each}}

            </div>
        </div>
        {{/if}}
    </div>
</section>