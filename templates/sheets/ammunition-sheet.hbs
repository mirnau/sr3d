<form class="{{cssClass}}" autocomplete="off">

    <div class="sheet-content ammunition-sheet">
        <div class="item-sheet-component">
            <div class="inner-background-container">
                <div class="fake-shadow"></div>
                <div class="inner-background">
                    <header class="image-mask">
                        <img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64" />
                    </header>
                    <div contenteditable="true" name="name" id="name-field" placeholder="{{localize 'Name'}}">
                        <h1>
                            {{item.name}}
                        </h1>
                    </div>
                    <div class="stat-grid">

                        <div class="stat-card">
                            <div>
                                <h3>{{localize "sr3d.item.common.cost"}}</h3>
                            </div>
                            <div class="stat-label">
                                <div class="stat-value">
                                    <h1>
                                        {{system.cost}}
                                    </h1>
                                </div>
                            </div>
                        </div>

                        <div class="stat-card">
                            <div>
                                <h3>{{localize "sr3d.item.common.days"}} : {{localize "sr3d.item.common.hours"}}</h3>
                            </div>
                            <div class="stat-label">
                                <div class="stat-value">
                                    <h1>
                                        {{system.ammunition.availability.days}} :
                                        {{system.ammunition.availability.hours}}
                                    </h1>
                                </div>
                            </div>
                        </div>

                        <div class="stat-card">
                            <div>
                                <h3>{{localize "sr3d.item.common.streetIndex"}}</h3>
                            </div>
                            <div class="stat-label">
                                <div class="stat-value">
                                    <h1>{{system.streetIndex}}</h1>
                                </div>
                            </div>
                        </div>

                        <div class="stat-card">
                            <div>
                                <h3>{{localize "sr3d.item.common.restrictionLevel"}}</h3>
                            </div>
                            <div class="stat-label">
                                <div class="stat-value">
                                    <h1>{{system.restrictionLevel}}</h1>
                                </div>
                            </div>
                        </div>

                        <div class="stat-card">
                            <div>
                                <h3>{{localize "sr3d.item.common.legality"}}</h3>
                            </div>
                            <div class="stat-label">
                                <select name="system.legality.type" data-dtype="String">
                                    {{#each config.legality as |label key|}}
                                    <option value="{{key}}" {{#if (eq ../system.legality.type key)}}selected{{/if}}>
                                        {{localize label}}
                                    </option>
                                    {{/each}}
                                </select>
                            </div>
                        </div>

                        <div class="stat-card">
                            <div>
                                <h3>{{localize "sr3d.item.common.category"}}</h3>
                            </div>
                            <div class="stat-label">
                                <select name="system.legality.category" data-dtype="String">
                                    {{#each config.category as |label key|}}
                                    <option value="{{key}}" {{#if (eq ../system.legality.category key)}}selected{{/if}}>
                                        {{label}}
                                    </option>
                                    {{/each}}
                                </select>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

            <div class="item-sheet-component">
                <div class="inner-background-container">
                    <div class="fake-shadow"></div>
                    <div class="inner-background">
                        <div class="editor-field">
                            {{editor system.description owner=owner button=true editable=editable}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
</form>
